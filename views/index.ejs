<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All chats</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/style.css" />
    <style>
  .clamp-text {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
</style>

  </head>
  <body>
    <h1>All chats</h1>
    <% chats.forEach(chat=>{ %>
    <div
      class="card d-inline-flex text-center p-2 flex-wrap"
      style="width: 20rem; height: 30rem; margin:20px">
      <img class="card-img-top" src="<%= chat.image %>" alt="Card image cap" />
      <div class="card-body">
        <h5 class="card-title"><%= chat.user %></h5>
        <p class="card-text clamp-text mb-4" style="font-size: 0.8rem">
          <%= chat.conversation %>
        </p>

        <a href="/chats/<%= chat.id %>/edit" class="btn btn-primary">Edit</a>
        <a href="/chats/<%= chat.id %>" class="btn btn-primary">Show me full</a>
        <form action="/chats/<%= chat.id %>?_method=DELETE" method="post">
          <button>DELETE</button>
        </form>
      </div>
    </div>
    <% }) %>
    <form method="get" action="/chats/new">
      <button>Add a new chat</button>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
